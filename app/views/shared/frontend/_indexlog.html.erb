<% if current_user == nil %>
<div class="container">
    <div class="row">
        <div class="col-8">
        </div>
        <div class="col-4">
            <%= form_for @users,url:user_registration_path do |f| %>
            <div class="field">
                <%= f.label :password %>
                <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> characters minimum)</em>
                <% end %><br />
                <%= f.password_field :password, autocomplete: "new-password" %>
            </div>
            <div class="field">
                <%= f.label :email,'メールアドレス' %><br />
                <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
            </div>
            <div class="actions">
                <%= f.submit "登録",class:'btn btn-primary mt-4 mb-2' %>
            </div>
            <% end %>
        </div>
    </div>
</div>
<% end %>